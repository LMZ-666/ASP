        .image1 {
            width: 70px;
            height: 70px;
            margin-top: -10px;
        }

        .header {
            display: inline-flex;
            margin: 5px 0 0 150px;
        }

        .content {
            display: inline-flex;
        }

        .content1, .content2, .content3 {
            margin-left: 5px;
            margin-right: 10px;
            margin-top: 20px;
            width: 100px;
            padding-top: 18px;
            padding-right: 12px;
            padding-left: 12px;
        }

        .content1 {
            margin-left: 150px;
        }

        .white_content {
            display: none;
            position: absolute;
            top: 10%;
            left: 72%;
            width: 15%;
            height: 40%;
            padding: 30px;
            border: 10px solid gray;
            background-color: white;
            z-index: 1002;
            overflow: auto;
            border-radius: 5px;
        }

        .input1 {
            margin-bottom: 20px;
        }

        h6 {
            font-size: 15px;
        }

        .sss {
            text-decoration: none;
            display: none;
            color: white;
        }

        .secondmenudiv {
            border-radius: 5px;
            padding-bottom: 3px;
            padding-left: 5px;
            padding-right: 3px;
        }

        .secondmenudiv {
            opacity: 0.9 !important;
        }
    </style>
    <script type="text/javascript">
        function disp() {
            for (var i = 0; i < 4; i++) {
                document.getElementsByClassName('sss')[i].style.display = 'block';

            }
        }

        function out() {
            for (var i = 0; i < 4; i++) {
                document.getElementsByClassName('sss')[i].style.display = 'none';
            }
        }
    </script>
</head>
<body>
    <div class="nav">
        <div class="divli" id="divli">
            <a class="li1" id="li1title" href="login.html">欢迎使用LF考试系统</a>
        </div>
        <div class="divli">
            <a class="li1" href=@Url.Content("StudentIndex")>首页</a>
        </div>
        <div class="divli">
            @*<a class="li1" href="">开始考试</a>*@
            @Ajax.ActionLink("考试信息", "StartTest", "Student", new { area = "student" }, ajaxOptions, new { @class = "li1" });
        </div>
        <div class="divli">
            <a class="li1" id="secondmenu" onmouseover="disp()"
               onmouseleave="out()" href="#">查看已交答案</a>
        </div>
        <div class="divli">
            <a class="li1" href="">查看已绑定的IP地址</a>
        </div>

        <div class="divli" id="divli1">
            <a class="li1" href="">欢迎你</a>
        </div>

        @*<div class="divli">
                <a class="li1" href="javascript:void(0)"
                   onclick="document.getElementById('light').style.display='block';">修改口令</a>
            </div>*@
        <div class="divli">
            <a class="li1" href=@Url.Content("/Home/Login")>退出</a>
        </div>
    </div>
    <br>
    <div class="header">

        <div class="img1">
            <img class="image1" alt="没有找到图片" src="/image/考试.png">
        </div>
        <div style="margin: 0 0 0 10px;">
            <h2 style="font-size: 30px; margin: 6px 0 0 7px">上机考试系统</h2>
        </div>
    </div>
    <br>

    <div>
        @RenderBody()
    </div>

